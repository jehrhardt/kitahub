<div class="register-block center-block">
  <h1 class="register-hd">Registrieren</h1>
  <form>
    <div class="form-group">
      <%= form_for(@user) do |f| %>
      <div class="form-group">
        <%= f.text_field :first_name, :placeholder => 'Vorname', :class => 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.text_field :last_name, :placeholder => 'Nachname', :class => 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.email_field :email, :placeholder => 'E-Mail', :class => 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.password_field :password, :placeholder => 'Passwort', :class => 'form-control' %>
      </div>
      <%= f.submit 'Neu anmelden', :class => 'btn btn-default center-block next-btn' %>
      <% end %>
    </div>
  </form>
</div>
