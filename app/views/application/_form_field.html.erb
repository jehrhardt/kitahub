<% if model.errors[field_name].any? %>
  <div class="form-group has-error">
    <label class="control-label">
      <%= model.errors[field_name].join(", ")   %>
    </label>
    <%= f.text_field field_name, class: 'form-control' %>
  </div>
<% else %>
  <div class="form-group">
    <%= f.text_field field_name, placeholder: placeholder, type: type, class: 'form-control' %>
  </div>
<% end %>
