<div class="register-block center-block">
  <h1 class="register-hd">Anmelden</h1>
  <form>
    <div class="form-group">
      <%= form_for(:session, url: login_path) do |f| %>
        <div class="form-group">
          <%= f.email_field :email, :placeholder => 'E-Mail', :class => 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.password_field :password, :placeholder => 'Passwort', :class => 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.submit 'Anmelden', :class => 'btn btn-default center-block next-btn btn-submit' %>
        </div>
      <% end %>
    </div>
  </form>
</div>
